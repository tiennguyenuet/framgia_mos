<div class="col-md-4 col-md-offset-4 reset-passwprd-form">
  <h2><%= t ".forgot_password"%>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name),
    html: {method: :post}) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: "form-control",
        id: "email_user", autofocus: true %>
    </div>

    <div class="actions">
      <%= f.submit t(".send_instruction"),
        class: "btn btn-info form-control sendmail_reset" %>
    </div>
  <% end %>
</div>
