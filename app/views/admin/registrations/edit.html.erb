<div class="container">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
    html: { method: :put }) do |f| %>
    <center><h1><%= t ".edit_profile"%></h1></center>
    <div class="row">
        <!-- left column -->
        <div class="col-md-3">
          <div class="text-center avatar">
            <div class="avatar-current img-circle" alt="avatar">
              <%= image_tag current_admin_user.avatar,
                size: Settings.avatar_admin, class: "current-ava" %>
              <img id="new-ava"/>
            </div>
            <h6><%= t ".choose_different_photo"%></h6>
            <%= f.file_field :avatar, class: "form-control avatar-admin" %>
          </div>
        </div>

        <!-- edit form column -->
        <div class="col-md-9 personal-info">
        <%= devise_error_messages! %>
          <div class="form-horizontal" role="form">
            <div class="form-group">
              <label class="col-lg-3 control-label"><%= t ".name"%></label>
              <div class="col-lg-8">
                <%= f.text_field :name, class: "form-control", autofocus: true %>
              </div>
            </div>

            <div class="form-group">
              <label class="col-lg-3 control-label">
                <%= t ".email"%>
              </label>
              <div class="col-lg-8">
                <%= f.email_field :email, class: "form-control", autofocus: true %>
              </div>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>
                <%= t(".confirmation") %><%= resource.unconfirmed_email %>
              </div>
            <% end %>

            <div class="form-group">
              <label class="col-lg-3 control-label"><%= t ".password"%></label>
              <i><%= t ".not_change"%></i>
              <div class="col-lg-8">
                <%= f.password_field :password, class: "form-control",
                  autocomplete: "off" %>
                <% if @minimum_password_length %>
                  <em>
                    <%= @minimum_password_length %><%= t ".characters_minimum"%>
                  </em>
                <% end %>
              </div>
            </div>

            <div class="form-group">
              <label class="col-lg-3 control-label">
                <%= t ".password_confirmation"%>
              </label>
              <div class="col-lg-8">
                <%= f.password_field :password_confirmation,
                  class: "form-control", autocomplete: "off" %>
              </div>
            </div>

            <div class="form-group">
              <label class="col-lg-3 control-label">
                <%= t ".current_password"%>
              </label>
              <div class="col-lg-8">
                <%= f.password_field :current_password, class: "form-control",
                  autocomplete: "off" %>
                <i><%= t ".need_current_password" %></i>
              </div>
            </div>

            <div class="form-group">
              <label class="col-md-3 control-label"></label>
              <div class="col-md-8">
                <%= f.submit t(".update"), class: "btn btn-info" %>
              </div>
            </div>
          </div>
        </div>
    </div>
  <% end %>
</div>
